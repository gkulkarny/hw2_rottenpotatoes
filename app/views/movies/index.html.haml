-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  = hidden_field_tag "ratings[X]", nil
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, session[:ratings].include?(rating)
  = submit_tag 'Refresh', id: 'ratings_submit'

%table#movies
  %thead
    %tr
      %th#title_header=link_to "Movie Title", movies_path({:sort_column => "title", :direction => (params[:direction] == "ASC" ? "DESC" : "ASC")} )
      %th Rating
      %th#release_date_header= link_to "Release Date", movies_path({:sort_column => "release_date",  :direction => (params[:direction] == "ASC" ? "DESC" : "ASC")} )
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
